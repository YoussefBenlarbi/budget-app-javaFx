<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="register_form" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.budget.Controller.RegisterController">
    <left>
        <AnchorPane prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: #0598ff;"
                    BorderPane.alignment="CENTER">
            <FontAwesomeIconView fill="WHITE" glyphName="USER_PLUS" layoutX="158.0" layoutY="231.0" size="67"/>
            <Text fill="WHITE" layoutX="87.0" layoutY="286.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  style="-fx-font-size: 33;" text="Budget tracker"/>
        </AnchorPane>
    </left>
    <right>
        <AnchorPane prefHeight="500.0" prefWidth="415.0" BorderPane.alignment="CENTER">
            <TextField fx:id="username" layoutX="101.0" layoutY="201.0" promptText="User Name"
                       style="-fx-background-color: white; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px  0px;"/>
            <TextField fx:id="email" layoutX="100.0" layoutY="244.0" promptText="Email"
                       style="-fx-background-color: white; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px  0px;"/>

            <FontAwesomeIconView fill="#0598ff" glyphName="USER" layoutX="64.0" layoutY="225.0" size="20"/>
            <FontAwesomeIconView fill="#0598ff" glyphName="ENVELOPE" layoutX="64.0" layoutY="267.0" size="20"/>
            <Button fx:id="submit_button" layoutX="102.0" layoutY="336.0" mnemonicParsing="false"
                    onAction="#onSubmitButtonClick" prefHeight="30.0" prefWidth="146.0"
                    style="-fx-background-color: white; -fx-border-color: #0598ff; -fx-border-width: 2px; -fx-border-radius: 5px;"
                    text="Submit" textFill="#0598ff"/>

            <FontAwesomeIconView fill="#0598ff" glyphName="USERS" layoutX="147.0" layoutY="129.0" size="40"/>
            <Label layoutX="115.0" layoutY="144.0" style="-fx-font-weight: 600; -fx-font-size: 14px;"
                   text="Registration logo" textFill="#6b7280"/>

            <PasswordField fx:id="password" layoutX="99.0" layoutY="284.0" promptText="Password"
                           style="-fx-background-color: white; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px  0px;"/>
            <FontAwesomeIconView fill="#0598ff" glyphName="KEY" layoutX="63.0" layoutY="307.0" size="20"/>
        </AnchorPane>
    </right>
</BorderPane>
